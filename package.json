{
  "name": "dotnext-api-navigation",
  "displayName": "Dot-Next API Navigator",
  "description": "Navigate between Next.js frontend fetch() calls and ASP.NET backend controller endpoints with CTRL+Click navigation.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "workspaceContains:**/*Controller.cs",
    "workspaceContains:**/*.tsx"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "apiNavigator.refresh",
        "title": "Refresh API Endpoints",
        "icon": "$(refresh)",
        "category": "API Navigator"
      },
      {
        "command": "apiNavigator.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)",
        "category": "API Navigator"
      }
    ],
    "configuration": {
      "title": "API Navigator",
      "properties": {
        "apiNavigator.frontendRoot": {
          "type": "string",
          "default": "./frontend",
          "description": "Path to the Next.js frontend root folder (relative to workspace)"
        },
        "apiNavigator.backendRoot": {
          "type": "string",
          "default": "./backend",
          "description": "Path to the ASP.NET backend root folder (relative to workspace)"
        },
        "apiNavigator.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh endpoint index when files change"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "apiNavigator.refresh",
          "when": "view == dot-next-apiNavigator.endpoints",
          "group": "navigation"
        },
        {
          "command": "apiNavigator.openSettings",
          "when": "view == dot-next-apiNavigator.endpoints",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "dot-next-apiNavigator.endpoints",
          "name": "API Endpoints",
          "icon": "media/api.svg",
          "contextualTitle": "Dot-Next API Navigator"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.18.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
