{
  "name": "dotnext-api-navigation",
  "displayName": "dotnext-api-navigation",
  "description": "Navigate Between fetch and controller endpoints by CNTRL+C on endpoints in the Next.js frontend to easily view logic.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnext-api-navigation.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "typescript",
        "extensions": [
          ".ts",
          ".tsx"
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dot-next-apiNavigator",
          "title": "Dot-Next API Navigator",
          "icon": "media/api.svg"
        }
      ]
    },
    "views": {
      "dot-next-apiNavigator": [
        {
          "id": "dot-next-apiNavigator.endpoints",
          "name": "Endpoints",
          "icon": "media/api.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
